@model Symphont_LTD.Models.Fee

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Backend.cshtml";
}

<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>Add Fees</h3>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.ID, "ID", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ID", null, htmlAttributes: new { @class = "select2" })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.Pay_Date, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Pay_Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pay_Date, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
        }
    </div>
</div>