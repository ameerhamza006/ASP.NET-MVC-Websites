@model IEnumerable<Symphont_LTD.Models.Course>

@{
    ViewBag.Title = "All Course Data";
    Layout = "~/Views/Shared/Backend.cshtml";
}

    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1">
                <div class="item-title">
                    <h3>All Course Data</h3>
                </div>
            </div>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <div class="table-responsive">
                <table class="table display data-table text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input checkAll">
                                    <label class="form-check-label">ID</label>
                                </div>
                            </th>

                            <th>Course Name</th>
                            <th>Descripation</th>
                            <th>Image</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.C_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_Descripation)
                                </td>
                                <td>
                                    <img src="~/coursepic/@Html.DisplayFor(modelItem => item.Course_Image)" />

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_start_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_end_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_Price)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.C_id }, new { @class = "btn-fill-sm radius-4 text-light bg-light-sea-green" })
                                    @Html.ActionLink("Details", "Details", new { id = item.C_id }, new { @class = "btn-fill-sm radius-4 text-light bg-yellow" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.C_id }, new { @class = "btn-fill-sm radius-4 text-light bg-orange-red" })
                                </td>
                            </tr>
                        }

                </table>
            </div>
        </div>
    </div>