@model Symphont_LTD.Models.Exam

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Backend.cshtml";
}

<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>Add New Exam</h3>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.ID, "ID", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.Exam_Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Exam_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Exam_Name, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.Exam_Time, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Exam_Time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Exam_Time, "", new { @class = "text-danger" })
        </div>

        <div class="col-xl-3 col-lg-6 col-12 form-group">
            @Html.LabelFor(model => model.Exam_Date, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Exam_Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Exam_Date, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-offset-2 col-md-10 form-group">
                <input type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
            <div class="col-xl-3 col-lg-6 col-12 form-group mg-t-30">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
        }
    </div>
</div>